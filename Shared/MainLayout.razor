@inherits LayoutComponentBase

<div class="d-flex vh-100">
    <!-- Sidebar -->
    <div class="bg-dark p-3" style="width: 250px;">
        <h2 class="text-light mb-4">Blazing Blog</h2>

        <NavLink href="/main" class="nav-link text-light mb-2">Feed</NavLink>
        <NavLink href="/about" class="nav-link text-light mb-2"></NavLink>

        <hr class="border-light" />

        <AuthorizeView>
            <Authorized>
                <p class="text-light fw-bold">@context.User?.Identity?.Name</p>
                <NavLink href="/logout" class="btn btn-danger w-100">Logout</NavLink>
            </Authorized>
            <NotAuthorized>
                <NavLink href="/login" class="btn btn-primary w-100">Login</NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <!-- Main Content -->
    <div class="flex-fill p-4">
        @Body
    </div>
</div>






